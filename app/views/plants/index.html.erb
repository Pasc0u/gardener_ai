
<h1>Plants in my <%= @garden_name %> garden</h1>

<% @plants.each do |plant| %>
  <div class='card-product mb-3'>
      <img src='<%= plant.image %>' alt='<%= plant.species %>' style='height: 200px'>
      <div class='card-product-infos'>
        <h2><%= link_to plant.nickname, plant_path(plant), class: "text-decoration-none"%></h2>
        <p><%= plant.species %></p>
        <p class='card-product-delete'><%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, plant_path(plant), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete your #{plant.nickname}?"} %></p>
      </div>
  </div>
<% end %>

<%= link_to "Back to home", root_path%>
