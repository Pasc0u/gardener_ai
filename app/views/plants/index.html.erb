
<h1>Plants in my <%= @garden_name %> garden</h1>

<div class='mb-3'>
  <%= link_to '<i class="fa-solid fa-arrow-left"></i> back to home'.html_safe, root_path%>
</div>



<% @plants.each do |plant| %>
  <%= link_to plant_path(plant) do %>
    <div class='card-product mb-3' >
        <img src='<%= plant.image %>' alt='<%= plant.species %>' style='height: 200px'>
        <div class='card-product-infos'>
          <h2><%= plant.nickname %></h2>
          <p><%= plant.species %></p>
          <%# <p class='card-product-delete'><%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, plant_path(plant), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete your #{plant.nickname}?"} %>
        </div>
    </div>
  <% end %>
<% end %>
