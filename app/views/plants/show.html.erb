<h1> <%= @plant.species %> </h1>

<div class='card mb-3 mt-3'>
      <img src='<%= @plant.image %>' alt='<%= @plant.species %>' style='height: 200px'>
      <div class='p-2'>
        <h4><%= @plant.nickname%></h4>
        <i><%= @plant.species %></i>
        <div class='mt-2'>
          <p><span style='font-weight: bolder'>Details</span><br>
            Location: <%= @plant.location %><br>
            Potted? <%= @plant.is_potted ? "Yes" : "No" %>
          </p>
        </div>
      </div>
</div>

<div class="mt-3">
  <%= simple_form_for [@plant, @chat] do |f| %>
    <%= f.submit "Ask Gardener for advice", class: "btn btn-primary" %>
  <% end %>
</div>

<div class='mt-3'>
  <% if @chats.any? %>
    <p><strong>Latest chats</strong></p>
    <ul class="list-group">
      <% @plant.chats.each do |chat| %>
        <li class="list-group-item"><%= link_to chat.topic, chat_path(chat) %></li>
      <% end %>
    </ul>
    <% else %>
      <p>There are no chats yet.</p>
    <% end %>
</div>

<%= link_to "Back to all plants", plants_path%>
